	@cd $(SOURCE_DIR);						\
	rm -f /tmp/id$$$$;						\
	touch /tmp/id$$$$;						\
	echo Making file list;						\
	for i in ${TAGDIRS} ${MACHINE_TAG_DIRS};			\
	do								\
		ls $$i/*.[cms] >> /tmp/id$$$$ 2> /dev/null;		\
	done;								\
