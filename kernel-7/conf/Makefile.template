	do								\
		ls $$i/*.h >> /tmp/id$$$$ 2> /dev/null;			\
	done;								\
	echo Making id database;					\
	TAGTYPE=`echo -n $(MACHINE) | tr a-z A-Z`;			\
	rm -f ID.$$TAGTYPE;						\
	mkid -a/tmp/id$$$$ -S.m=c -fID.$$TAGTYPE;			\
