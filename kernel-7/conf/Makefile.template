	    (cd $(SOURCE_DIR)/$$i;					\
		hdrs=`echo *.h`;					\
		if [ "$$hdrs" = '*.h' ]; then				\
		    echo No header files in $$i;			\
		else							\
		    for j in $$hdrs; 					\
		    do							\
			DSTDIR=$(DSTROOT)$(INCDIR)/$$i;			\
			[ -d $$DSTDIR ] || $(MKDIRS) $$DSTDIR;		\
			echo garbage > $$EXPDIR/$$j.strip;		\
			$(UNIFDEF) -UKERNEL_PRIVATE -UDRIVER_PRIVATE	\
				$$j > $$EXPDIR/$$j || 			\
				$(DECOMMENT) $$EXPDIR/$$j  r > 		\
				$$EXPDIR/$$j.strip; 			\
			if [ -s $$EXPDIR/$$j.strip ]; 			\
			then (						\
			    cd $$EXPDIR;				\
